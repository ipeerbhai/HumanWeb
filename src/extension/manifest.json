{
    "manifest_version": 2,
    "name": "Element Grabber",
    "version": "1.0",
    "description": "Grabs elements and prints them to the console.",
    "permissions": [
        "activeTab",
        "<all_urls>",
        "http://localhost:8670/*",
        "contextMenus",
        "webNavigation",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icon32.png"
            
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}