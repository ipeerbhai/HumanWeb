{
    "manifest_version": 2,
    "name": "LinkedIn Hello Overlay",
    "version": "1.0",
    "description": "Displays a full-page overlay on LinkedIn with a Hello message.",
    "permissions": [
        "activeTab",
        "https://www.linkedin.com/*"
    ],
    "background": {
        "scripts": [
            "dist/backgroud.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "dist/content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}